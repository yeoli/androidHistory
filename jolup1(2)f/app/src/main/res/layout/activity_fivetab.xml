<?xml version="1.0" encoding="utf-8"?>
<TabHost
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/tabhostt">

    <include layout="@layout/activity_maintool"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">


            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/tab1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:textSize="35dp"
                        android:gravity="center"
                        android:layout_marginTop="80dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/nday"
                        android:text="  " />

                    <TextView
                        android:textSize="30dp"
                        android:gravity="center"
                        android:layout_marginTop="80dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" 일차" />

                </LinearLayout>

                <LinearLayout

                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/goid"
                        android:textSize="30dp"
                        android:textColor="#81C784"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="  "/>

                    <TextView
                        android:textSize="20dp"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" 님 반갑습니다."
                        android:layout_marginBottom="30dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_marginLeft="15dp"
                        android:textSize="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="양발균형"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:gravity="center"
                        android:layout_marginLeft="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="15dp"
                        android:text="왼발"/>

                    <Button
                        android:id="@+id/BalLeft"
                        android:layout_marginLeft="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        android:background="@drawable/button_background"
                        android:text=""
                        />

                    <TextView
                        android:gravity="center"
                        android:layout_marginLeft="25dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="15dp"
                        android:text="오른발"/>

                    <Button
                        android:id="@+id/BalRight"
                        android:layout_marginLeft="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        android:background="@drawable/button_background"
                        android:text=""
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="20dp"
                        android:text="삼박자"
                        android:textSize="20dp" />


                </LinearLayout>

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="왼발"
                    android:textSize="15dp"
                    />

                <LinearLayout
                    android:gravity="center"
                    android:layout_marginTop="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_marginLeft="4dp"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="15dp"
                        android:text="뒤꿈치"/>

                    <Button
                        android:id="@+id/ThreeLBack"
                        android:layout_marginLeft="5dp"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        android:background="@drawable/button_background"
                        android:text=""
                        />

                    <TextView
                        android:gravity="center"
                        android:layout_marginLeft="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="15dp"
                        android:text="발바닥"/>

                    <Button
                        android:id="@+id/ThreeLMiddle"
                        android:layout_marginLeft="5dp"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        android:background="@drawable/button_background"
                        android:text=""
                        />

                    <TextView
                        android:gravity="center"
                        android:layout_marginLeft="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="15dp"
                        android:text="앞꿈치"/>

                    <Button
                        android:id="@+id/ThreeLFront"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="4dp"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        android:background="@drawable/button_background"
                        android:text=""
                        />

                </LinearLayout>

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="오른발"
                    android:textSize="15dp"
                    />

                <LinearLayout
                    android:gravity="center"
                    android:layout_marginTop="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_marginLeft="2dp"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="15dp"
                        android:text="뒤꿈치"/>

                    <Button
                        android:id="@+id/ThreeRBack"
                        android:layout_marginLeft="5dp"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        android:background="@drawable/button_background"
                        android:text=""
                        />

                    <TextView
                        android:gravity="center"
                        android:layout_marginLeft="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="15dp"
                        android:text="발바닥"/>

                    <Button
                        android:id="@+id/ThreeRMiddle"
                        android:layout_marginLeft="5dp"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        android:background="@drawable/button_background"
                        android:text=""
                        />

                    <TextView
                        android:gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="15dp"
                        android:text="앞꿈치"/>

                    <Button
                        android:id="@+id/ThreeRFront"
                        android:layout_marginLeft="2dp"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        android:background="@drawable/button_background"
                        android:text=""
                        android:layout_marginRight="4dp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_marginLeft="15dp"
                        android:textSize="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="지지분포"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:gravity="center"
                        android:layout_marginLeft="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="15dp"
                        android:text="왼발"/>

                    <Button
                        android:id="@+id/SuportLeft"
                        android:layout_marginLeft="10dp"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        android:background="@drawable/button_background"
                        android:text=""
                        />

                    <TextView
                        android:gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="15dp"
                        android:text="오른발"/>

                    <Button
                        android:id="@+id/SuportRight"
                        android:layout_marginLeft="10dp"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        android:background="@drawable/button_background"
                        android:text=""
                        />

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="70dp"
                android:orientation="vertical"
                android:id="@+id/tab2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imgb"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:src="@mipmap/ic_launcher_south" />

                    <TextView
                        android:id="@+id/date"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text=" "
                        android:textSize="20dp" />

                    <ImageView
                        android:id="@+id/imga"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:src="@mipmap/ic_launcher_east" />
                </LinearLayout>

                <ListView
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/listv1"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:dividerHeight="10dp"
                    android:divider="#d2d2"/>

                <TextView
                    android:layout_weight="1"
                    android:textSize="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/r"/>
            </LinearLayout>


            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:id="@+id/tab3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="측정을 시작하시겠습니까?"
                    android:textSize="25dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="120dp"/>

                <ImageButton
                    android:id="@+id/checkbu"
                    android:layout_height="200dp"
                    android:layout_width="200dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="100dp"
                    android:background="@mipmap/ic_checkkk"/>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="버튼을 눌러주세요"
                    android:textSize="18dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="50dp"/>


            </LinearLayout>

            <LinearLayout
                android:layout_marginBottom="30dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:id="@+id/tab4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="67dp">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="양발균형"
                            android:layout_marginLeft="10dp"/>
                        <com.github.mikephil.charting.charts.BarChart
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:id="@+id/chart_bal">

                        </com.github.mikephil.charting.charts.BarChart>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="3박자"
                            android:layout_marginLeft="10dp"/>
                        <com.github.mikephil.charting.charts.BarChart
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:id="@+id/chart_thre">

                        </com.github.mikephil.charting.charts.BarChart>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="지지분포"
                            android:layout_marginLeft="10dp"/>
                        <com.github.mikephil.charting.charts.BarChart
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:id="@+id/chart_sup">
                        </com.github.mikephil.charting.charts.BarChart>
                    </LinearLayout>
                </ScrollView>
            </LinearLayout>

        </FrameLayout>

        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</TabHost>
