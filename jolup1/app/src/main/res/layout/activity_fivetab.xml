<?xml version="1.0" encoding="utf-8"?>
<TabHost
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/tabhostt">

    <include layout="@layout/activity_maintool"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">



            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:id="@+id/tab1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:textSize="35dp"
                        android:gravity="center"
                        android:layout_marginTop="110dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/nday"
                        android:text="  " />

                    <TextView
                        android:textSize="35dp"
                        android:gravity="center"
                        android:layout_marginTop="110dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" 일차" />

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="25dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/goid"
                        android:textSize="30dp"
                        android:textColor="#81C784"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="  "/>

                    <TextView
                        android:textSize="20dp"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" 님 반갑습니다."/>
                </LinearLayout>

                <com.github.mikephil.charting.charts.RadarChart
                    android:id="@+id/radari"
                    android:layout_width="392dp"
                    android:layout_height="307dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="25dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:id="@+id/tab2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_marginTop="80dp"
                        android:id="@+id/imgb"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:src="@mipmap/ic_launcher_south" />

                    <TextView
                        android:layout_marginTop="80dp"
                        android:id="@+id/date"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text=" "
                        android:textSize="20dp" />

                    <ImageView
                        android:layout_marginTop="80dp"
                        android:id="@+id/imga"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:src="@mipmap/ic_launcher_east" />
                </LinearLayout>

                <ListView
                    android:layout_weight="1"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/listv1"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:dividerHeight="10dp"
                    android:divider="#d2d2"/>

                <TextView
                    android:textSize="5dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/r"/>


            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:id="@+id/tab3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="측정을 시작하시겠습니까?"
                    android:textSize="25dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="120dp"/>

                <ImageButton
                    android:id="@+id/checkbu"
                    android:layout_height="200dp"
                    android:layout_width="200dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="100dp"
                    android:background="@mipmap/ic_checkkk"/>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="버튼을 눌러주세요"
                    android:textSize="18dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="50dp"/>


            </LinearLayout>

            <LinearLayout
                android:layout_marginBottom="30dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:id="@+id/tab4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="67dp">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="양발균형"
                            android:layout_marginLeft="10dp"/>
                        <com.github.mikephil.charting.charts.BarChart
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:id="@+id/chart_bal">

                        </com.github.mikephil.charting.charts.BarChart>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="3박자"
                            android:layout_marginLeft="10dp"/>
                        <com.github.mikephil.charting.charts.BarChart
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:id="@+id/chart_thre">

                        </com.github.mikephil.charting.charts.BarChart>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="지지분포"
                            android:layout_marginLeft="10dp"/>
                        <com.github.mikephil.charting.charts.BarChart
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:id="@+id/chart_sup">
                        </com.github.mikephil.charting.charts.BarChart>
                    </LinearLayout>
                </ScrollView>
            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:id="@+id/tab5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </LinearLayout>

        </FrameLayout>

        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</TabHost>